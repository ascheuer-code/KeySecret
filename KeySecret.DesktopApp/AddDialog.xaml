<Window x:Class="KeySecret.DesktopApp.AddDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeySecret.DesktopApp"
        mc:Ignorable="d"
        Title="AddDialog" Height="200" Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        VerticalAlignment="Center"
        HorizontalAlignment="Center">
    
    <Grid>
        <StackPanel>
            <Label Content="Kategorie hinzufügen"
                   HorizontalAlignment="Center"
                   FontSize="36"
                   Margin="15"/>
            <TextBox Name="KategorieBox"
                     Text="Kategorie"
                     Foreground="Gray"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     GotFocus="KategorieBox_GotFocus"
                     KeyDown="KeyDown_Enter"
                     Width="250"
                     FontSize="26"
                     Margin="0 0 0 15"/>
            <Button Content="Hinzufügen" Width="80" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
